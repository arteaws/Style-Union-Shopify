




{% schema %}
{
  "name": "Dynamic Product Badges",
  "settings": [
    {
      "type": "paragraph",
      "content": "Add badges that appear on products based on their collections"
    }
  ],
  "blocks": [
    {
      "type": "badge",
      "name": "Badge",
      "settings": [
        {
          "type": "text",
          "id": "badge_name",
          "label": "Badge Name",
          "default": "New In"
        },
        {
          "type": "text",
          "id": "collections",
          "label": "Collection Names (comma separated)",
          "info": "Enter collection titles where this badge should appear",
          "default": "New In, Bestseller"
        },
        {
          "type": "select",
          "id": "duration",
          "label": "Duration",
          "options": [
            {
              "value": "15_days",
              "label": "15 Days"
            },
            {
              "value": "30_days",
              "label": "30 Days"
            },
            {
              "value": "infinite",
              "label": "Infinite"
            }
          ],
          "default": "infinite"
        },
        {
          "type": "text",
          "id": "start_date",
          "label": "Start Date (YYYY-MM-DD)",
          "info": "Leave blank to use current date when saved",
          "default": "now"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Dynamic Product Badges",
      "category": "Products"
    }
  ]
}
{% endschema %}