    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Recently Viewed Products"
    }
  ],
  "presets": [
    {
      "name": "custom-recently-viewed",
      "category": "Product"
    }
  ]
}
{% endschema %}