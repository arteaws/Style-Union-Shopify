    {
      "type": "range",
      "id": "mobile_slides",
      "min": 1,
      "max": 3,
      "step": 1,
      "label": "Mobile slides per view",
      "default": 2
    },
    {
      "type": "checkbox",
      "id": "show_navigation",
      "label": "Show navigation arrows",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_pagination",
      "label": "Show pagination dots",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "custom-recently-viewed",
      "category": "Products"
    }
  ]
}
{% endschema %}