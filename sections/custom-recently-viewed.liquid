{%- if products_to_show != blank -%}
  <div class="recently-viewed-slider-section" data-section-id="{{ section.id }}">
    <div class="page-width">
      <h2 class="section-header">{{ section.settings.heading | default: 'Recently Viewed' }}</h2>
      
      <div class="swiper recently-viewed-swiper"
           data-desktop-slides="{{ section.settings.desktop_slides }}"
           data-mobile-slides="{{ section.settings.mobile_slides }}">
        <div class="swiper-wrapper">
          {%- assign products_list = products_to_show | split: ',' -%}
          {%- for handle in products_list -%}
            {%- assign product = all_products[handle] -%}
            {%- if product != blank -%}
              <div class="swiper-slide">
                {% render 'product-listing', product: product %}
              </div>
            {%- endif -%}
          {%- endfor -%}
        </div>
        
        {%- if section.settings.show_navigation -%}
          <div class="swiper-button-next"></div>
          <div class="swiper-button-prev"></div>
        {%- endif -%}
        
        {%- if section.settings.show_pagination -%}
          <div class="swiper-pagination"></div>
        {%- endif -%}
      </div>
    </div>
  </div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/Swiper/8.4.7/swiper-bundle.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Initialize swiper
      const swiper = new Swiper('.recently-viewed-swiper', {
        slidesPerView: 1,
        spaceBetween: 20,
        navigation: {
          nextEl: '.swiper-button-next',
          prevEl: '.swiper-button-prev',
        },
        pagination: {
          el: '.swiper-pagination',
          clickable: true,
        },
        breakpoints: {
          640: {
            slidesPerView: parseInt(document.querySelector('.recently-viewed-swiper').dataset.mobileSlides) || 2,
            spaceBetween: 20
          },
          1024: {
            slidesPerView: parseInt(document.querySelector('.recently-viewed-swiper').dataset.desktopSlides) || 4,
            spaceBetween: 30
          }
        }
      });
    });
    
    // Track product views - this should run on every page
    (function() {
      // Function to set cookie
      function setCookie(name, value, days) {
        const date = new Date();
        date.setTime(date.getTime() + (days * 24 * 60 * 60 * 1000));
        document.cookie = name + "=" + value + "; expires=" + date.toUTCString() + "; path=/; SameSite=Lax";
      }
      
      // Function to get cookie
      function getCookie(name) {
        const cookieValue = document.cookie.split('; ').find(row => row.startsWith(name + '='));
        return cookieValue ? cookieValue.split('=')[1] : '';
      }
      
      // Only track on product pages
      {%- if request.page_type == 'product' -%}
        const productHandle = '{{ product.handle }}';
        
        if (productHandle) {
          let recentlyViewed = [];
          const existingCookie = getCookie('recently_viewed');
          
          if (existingCookie) {
            recentlyViewed = existingCookie.split(',').filter(handle => handle.trim() !== '');
          }
          
          // Remove if already exists to avoid duplicates
          recentlyViewed = recentlyViewed.filter(item => item !== productHandle);
          
          // Add to beginning of array
          recentlyViewed.unshift(productHandle);
          
          // Keep only last 10 products
          recentlyViewed = recentlyViewed.slice(0, 10);
          
          // Set cookie (expires in 30 days)
          setCookie('recently_viewed', recentlyViewed.join(','), 30);
          
          // Debug log
          console.log('Recently viewed updated:', recentlyViewed);
        }
      {%- endif -%}
    })();
  </script>
{%- else -%}
  {%- comment -%}Show debug info when no products{%- endcomment -%}
