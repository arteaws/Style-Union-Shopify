{%- liquid
  assign desktop_slides = section.settings.desktop_slides
  assign mobile_slides = section.settings.mobile_slides
  assign heading = section.settings.heading
  assign bg_color = section.settings.bg_color
  assign text_color = section.settings.text_color
  assign heading_size = section.settings.heading_size
  assign max_products = section.settings.max_products
  assign show_product_name = section.settings.show_product_name
-%}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css">
<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js" defer></script>

<style>
  .custom-recent-products {
    background-color: {{ bg_color }};
    color: {{ text_color }};
    padding: 40px 0;
    position: relative;
    z-index: 0;
  }

  .custom-recent-products__heading {
    font-size: {{ heading_size }}px;
    text-align: center;
    margin-bottom: 30px;
  }
  
  .custom-recent-products__slider {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    overflow: hidden;
  }
  
  .custom-recent-products__slide {
    display: flex;
    flex-direction: column;
    align-items: center;
    height: auto;
    width: calc((100% - ({{ desktop_slides | minus: 1 }} * 30px)) / {{ desktop_slides }});
  }
  
  .custom-recent-products__image-container {
    position: relative;
    width: 100%;
    padding-bottom: 100%;
    overflow: hidden;
    border-radius: 8px;
    margin-bottom: 10px;
  }
  
  .custom-recent-products__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }
  
  .custom-recent-products__title {
    font-size: 16px;
    text-align: center;
    color: {{ text_color }};
    text-decoration: none;
    padding: 0 10px;
    word-break: break-word;
    margin-bottom: 8px;
  }
  
  .swiper-button-next,
  .swiper-button-prev {
    color: {{ text_color }};
    background: rgba(255,255,255,0.5);
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }
  
  .swiper-button-next:hover,
  .swiper-button-prev:hover {
    background: rgba(255,255,255,0.8);
  }
  
  .swiper-button-next::after,
  .swiper-button-prev::after {
    font-size: 20px;
  }

  /* Product card styles */
  .prod-container {
    position: relative;
    width: 100%;
  }
  
  .custom-badges-collection-card {
    color: #151414;
    width: fit-content;
    position: absolute;
    z-index: 9;
    top: 6px;
    left: 6px;
    background: #fff;
    padding: 0px 10px;
    font-size: 8px;
    font-weight: 900;
    text-transform: uppercase;
  }
  
  .product-info {
    padding: 0 10px;
    width: 100%;
  }
  
  .product-price {
    margin-bottom: 10px;
    text-align: center;
  }
  
  /* Color swatches */
  .color-swatches-container {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 5px;
    margin-top: 8px;
  }
  
  .color-swatch {
    width: 20px;
    height: 20px;
    border-radius: 50%;
    border: 1px solid #e0e0e0;
    overflow: hidden;
    position: relative;
    cursor: pointer;
  }
  
  .color-swatch img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  /* Wishlist */
  #custom-smart-wishlist {
    z-index: 999;
    position: absolute;
    width: fit-content;
    right: 12px;
    top: 6px;
  }
  
  /* Quick view */
  .product-listing__quickview-trigger {
    position: absolute;
    bottom: 10px;
    left: 50%;
    transform: translateX(-50%);
    background: #fff;
    padding: 8px 15px;
    border-radius: 20px;
    font-size: 12px;
    opacity: 0;
    transition: opacity 0.3s ease;
    z-index: 10;
    white-space: nowrap;
  }
  
  .custom-recent-products__slide:hover .product-listing__quickview-trigger {
    opacity: 1;
  }

  /* Mobile styles */
  @media (max-width: 749px) {
    .custom-recent-products__slider {
      padding: 0 15px;
    }
    
    .custom-recent-products__heading {
      font-size: calc({{ heading_size }}px * 0.8);
    }
    
    .custom-recent-products__slide {
      width: calc((100% - ({{ mobile_slides | minus: 1 }} * 15px)) / {{ mobile_slides }});
    }
    
    .swiper-button-next,
    .swiper-button-prev {
      display: none;
    }
    
    .product-listing__quickview-trigger {
      display: none;
    }
  }

  /* Special case for single product */
  .swiper-slide.swiper-slide-single {
    width: calc((100% - ({{ desktop_slides | minus: 1 }} * 30px)) / {{ desktop_slides }});
  }

  @media (max-width: 749px) {
    .swiper-slide.swiper-slide-single {
      width: calc((100% - ({{ mobile_slides | minus: 1 }} * 15px)) / {{ mobile_slides }});
    }
  }
</style>

<div class="custom-recent-products" data-section-id="{{ section.id }}">
  {% if heading != blank %}
    <h2 class="custom-recent-products__heading">{{ heading }}</h2>
  {% endif %}
  
  <div class="custom-recent-products__slider-container">
    <div class="swiper custom-recent-products__slider">
      <div class="swiper-wrapper" id="recent-products-container-{{ section.id }}">
        <!-- Products will be loaded via JavaScript -->
      </div>
      
      <div class="swiper-button-next"></div>
      <div class="swiper-button-prev"></div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Function to safely get recent products
    function getRecentProducts() {
      try {
        const storedData = localStorage.getItem('recentlyViewedProducts') || '[]';
        const products = JSON.parse(storedData);
        
        // Basic validation - ensure each product has at least a URL
        return products.filter(p => p && p.url);
      } catch (e) {
        console.error('Error loading recent products:', e);
        return [];
      }
    }

    function initializeSlider(products, sectionId, showName) {
      const container = document.getElementById(`recent-products-container-${sectionId}`);
      const section = container?.closest('.custom-recent-products');
      
      if (!container || !section) return;
      
      // Always show section (even if empty)
      section.style.display = 'block';
      container.innerHTML = '';
      
      // Display message if no products
      if (products.length === 0) {
        container.innerHTML = `
          <div class="swiper-slide" style="width: 100%; text-align: center;">
            <p>No recently viewed products yet</p>
          </div>
        `;
        return;
      }
      
      // Create slides for each product
      products.forEach(product => {
        const slide = document.createElement('div');
        slide.className = products.length === 1 ? 
          'swiper-slide custom-recent-products__slide swiper-slide-single' : 
          'swiper-slide custom-recent-products__slide';
        
        const prodContainer = document.createElement('div');
        prodContainer.className = 'prod-container';
        
        // Badges
        if (product.badge) {
          const badge = document.createElement('div');
          badge.className = 'custom-badges-collection-card';
          badge.innerHTML = `<span class="product-badge">${product.badge}</span>`;
          prodContainer.appendChild(badge);
        }
        
        // Wishlist
        const wishlist = document.createElement('div');
        wishlist.id = 'custom-smart-wishlist';
        wishlist.innerHTML = `<span class="smartwishlist" data-product="${product.id}" data-variant="${product.variants ? product.variants[0].id : ''}"></span>`;
        prodContainer.appendChild(wishlist);
        
        // Image container
        const imgContainer = document.createElement('div');
        imgContainer.className = 'custom-recent-products__image-container';
        
        const imgLink = document.createElement('a');
        imgLink.href = product.url;
        
        const img = document.createElement('img');
        img.className = 'custom-recent-products__image';
        img.src = product.image || '{{ "image-placeholder.png" | asset_img_url: "400x" }}';
        img.alt = product.title || 'Product image';
        img.loading = 'lazy';
        img.onerror = function() {
          this.src = '{{ "image-placeholder.png" | asset_img_url: "400x" }}';
        };
        
        imgLink.appendChild(img);
        imgContainer.appendChild(imgLink);
        prodContainer.appendChild(imgContainer);
        
        // Quick view button
        const quickView = document.createElement('button');
        quickView.className = `quick-view-${product.id} product-listing__quickview-trigger js-modal-open js-quickview-trigger`;
        quickView.setAttribute('type', 'button');
        quickView.setAttribute('data-wau-modal-target', 'quickview');
        quickView.setAttribute('data-product-url', `${product.url}?view=quick`);
        quickView.textContent = '{{ "products.general.quick_view" | t }}';
        prodContainer.appendChild(quickView);
        
        // Product info container
        const productInfo = document.createElement('div');
        productInfo.className = 'product-info';
        
        // Title
        if (showName) {
          const titleLink = document.createElement('a');
          titleLink.href = product.url;
          
          const title = document.createElement('h2');
          title.className = 'custom-recent-products__title';
          title.textContent = product.title || 'Product';
          
          titleLink.appendChild(title);
          productInfo.appendChild(titleLink);
        }
        
        // Price
        const priceDiv = document.createElement('div');
        priceDiv.className = 'product-price';
        
        if (product.price && product.compare_at_price) {
          if (product.price < product.compare_at_price) {
            priceDiv.innerHTML = `
              <span class="price-item price-item--sale">${formatMoney(product.price)}</span>
              <span class="price-item price-item--regular" style="text-decoration: line-through; opacity: 0.7; margin-left: 5px;">${formatMoney(product.compare_at_price)}</span>
            `;
          } else {
            priceDiv.innerHTML = `<span class="price-item">${formatMoney(product.price)}</span>`;
          }
        } else if (product.price) {
          priceDiv.innerHTML = `<span class="price-item">${formatMoney(product.price)}</span>`;
        }
        
        productInfo.appendChild(priceDiv);
        
        // Color swatches
        if (product.variants && product.variants.length > 1) {
          const swatchesContainer = document.createElement('div');
          swatchesContainer.className = 'color-swatches-container';
          
          // Create a set to avoid duplicate colors
          const uniqueColors = new Set();
          
          product.variants.forEach(variant => {
            if (variant.featured_image && variant.option1 && !uniqueColors.has(variant.option1)) {
              uniqueColors.add(variant.option1);
              
              const swatchLink = document.createElement('a');
              swatchLink.href = `${product.url}?variant=${variant.id}`;
              
              const swatch = document.createElement('div');
              swatch.className = 'color-swatch';
              
              const swatchImg = document.createElement('img');
              swatchImg.src = variant.featured_image.src;
              swatchImg.alt = variant.option1;
              swatchImg.loading = 'lazy';
              
              swatch.appendChild(swatchImg);
              swatchLink.appendChild(swatch);
              swatchesContainer.appendChild(swatchLink);
            }
          });
          
          productInfo.appendChild(swatchesContainer);
        }
        
        slide.appendChild(prodContainer);
        slide.appendChild(productInfo);
        container.appendChild(slide);
      });
      
      // Initialize Swiper (destroy old instance if exists)
      const sliderEl = container.closest('.swiper');
      if (window.recentProductsSwiper) {
        window.recentProductsSwiper.destroy(true, true);
      }
      
      window.recentProductsSwiper = new Swiper(sliderEl, {
        slidesPerView: 'auto',
        centeredSlides: false,
        spaceBetween: 20,
        watchOverflow: true,
        navigation: {
          nextEl: '.swiper-button-next',
          prevEl: '.swiper-button-prev',
        },
        breakpoints: {
          320: {
            slidesPerView: 'auto',
            spaceBetween: 15
          },
          750: {
            slidesPerView: 'auto',
            spaceBetween: 30
          }
        }
      });
      
      // Hide arrows if only one product
      if (products.length === 1) {
        const arrows = sliderEl.querySelectorAll('.swiper-button-next, .swiper-button-prev');
        arrows.forEach(arrow => arrow.style.display = 'none');
      }
      
      // Initialize quick view
      if (typeof window.initQuickView === 'function') {
        window.initQuickView();
      }
    }
    
    // Helper function to format money
    function formatMoney(cents) {
      if (typeof cents === 'string') cents = parseInt(cents);
      return '$' + (cents / 100).toFixed(2);
    }
    
    // Load and display products
    function updateSlider() {
      const rawProducts = getRecentProducts().slice(0, {{ max_products }});
      
      // Enhance product data with variants if available
      const enhancedProducts = rawProducts.map(product => {
        // Try to parse variants if they exist as a string
        if (product.variants && typeof product.variants === 'string') {
          try {
            product.variants = JSON.parse(product.variants);
          } catch (e) {
            console.error('Error parsing variants:', e);
            product.variants = [];
          }
        }
        
        // Determine badge
        if (product.collections) {
          const collections = Array.isArray(product.collections) ? 
            product.collections : 
            (typeof product.collections === 'string' ? product.collections.split(',') : []);
          
          if (collections.includes('Bestseller New')) {
            product.badge = 'Most loved';
          } else if (collections.includes('Must Haves')) {
            product.badge = 'Must Have';
          } else if (collections.includes('Last Few')) {
            product.badge = 'Few Left';
          } else if (collections.includes('Store Bestseller')) {
            product.badge = 'Selling Fast';
          } else if (collections.includes('New In')) {
            const thirtyDaysAgo = new Date();
            thirtyDaysAgo.setDate(thirtyDaysAgo.getDate() - 30);
            
            if (new Date(product.created_at) > thirtyDaysAgo) {
              product.badge = 'New In';
            }
          }
        }
        
        return product;
      });
      
      initializeSlider(enhancedProducts, '{{ section.id }}', {{ show_product_name }});
    }
    
    // Initial load
    updateSlider();
    
    // Update when storage changes
    window.addEventListener('storage', updateSlider);
  });
</script>

{% schema %}
{
  "name": "Custom Recent Products",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Recently Viewed Products"
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 12,
      "max": 36,
      "step": 1,
      "unit": "px",
      "label": "Heading size",
      "default": 24
    },
    {
      "type": "range",
      "id": "desktop_slides",
      "min": 1,
      "max": 6,
      "step": 1,
      "label": "Number of slides on desktop",
      "default": 4
    },
    {
      "type": "range",
      "id": "mobile_slides",
      "min": 1,
      "max": 3,
      "step": 1,
      "label": "Number of slides on mobile",
      "default": 2
    },
    {
      "type": "range",
      "id": "max_products",
      "min": 3,
      "max": 20,
      "step": 1,
      "label": "Maximum products to show",
      "default": 10
    },
    {
      "type": "checkbox",
      "id": "show_product_name",
      "label": "Show product name",
      "default": true
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color",
      "default": "#f5f5f5"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#333333"
    }
  ],
  "presets": [
    {
      "name": "Custom Recent Products",
      "category": "Products"
    }
  ]
}
{% endschema %}