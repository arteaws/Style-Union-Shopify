<style>
  .recently-viewed-slider-section {
    margin: 40px 0;
  }
  
  .recently-viewed-slider-section .section-header {
    text-align: center;
    margin-bottom: 30px;
  }
  
  .recently-viewed-swiper {
    padding: 10px;
  }
  
  .swiper-button-next,
  .swiper-button-prev {
    color: #000;
    background: rgba(255,255,255,0.8);
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .swiper-button-next:after,
  .swiper-button-prev:after {
    font-size: 20px;
  }
  
  .swiper-pagination-bullet-active {
    background: #000;
  }
</style>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Swiper/8.4.7/swiper-bundle.min.css" />

{%- liquid
  # Get recently viewed products from cookie
  assign recently_viewed_ids = ""
  if request.cookies['recently_viewed']
    assign recently_viewed_ids = request.cookies['recently_viewed'] | split: ',' | uniq
  endif
  
  # Filter out invalid/empty products
  assign valid_products = ""
  for product_id in recently_viewed_ids
    assign product = all_products[product_id]
    if product != blank
      if valid_products != ""
        assign valid_products = valid_products | append: ','
      endif
      assign valid_products = valid_products | append: product.id
    endif
  endfor
-%}

{%- if valid_products != "" -%}
  <div class="recently-viewed-slider-section" data-section-id="{{ section.id }}">
    <div class="page-width">
      <h2 class="section-header">{{ section.settings.heading | default: 'Recently Viewed' }}</h2>
      
      <div class="swiper recently-viewed-swiper"
           data-desktop-slides="{{ section.settings.desktop_slides }}"
           data-mobile-slides="{{ section.settings.mobile_slides }}">
        <div class="swiper-wrapper">
          {%- assign products_list = valid_products | split: ',' -%}
          {%- for product_id in products_list -%}
            {%- assign product = all_products[product_id] -%}
            <div class="swiper-slide">
              {% render 'product-listing', product: product %}
            </div>
          {%- endfor -%}
        </div>
        
        {%- if section.settings.show_navigation -%}
          <div class="swiper-button-next"></div>
          <div class="swiper-button-prev"></div>
        {%- endif -%}
        
        {%- if section.settings.show_pagination -%}
          <div class="swiper-pagination"></div>
        {%- endif -%}
      </div>
    </div>
  </div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/Swiper/8.4.7/swiper-bundle.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Initialize swiper
      const swiperEl = document.querySelector('.recently-viewed-swiper');
      if (swiperEl) {
        new Swiper(swiperEl, {
          slidesPerView: 1,
          spaceBetween: 20,
          navigation: {
            nextEl: '.swiper-button-next',
            prevEl: '.swiper-button-prev',
          },
          pagination: {
            el: '.swiper-pagination',
            clickable: true,
          },
          breakpoints: {
            640: {
              slidesPerView: parseInt(swiperEl.dataset.mobileSlides) || 2,
              spaceBetween: 20
            },
            1024: {
              slidesPerView: parseInt(swiperEl.dataset.desktopSlides) || 4,
              spaceBetween: 30
            }
          }
        });
      }
      
      // Track product views and update cookie
      {%- if request.page_type == 'product' -%}
        const productId = '{{ product.id }}';
        let recentlyViewed = getCookie('recently_viewed');
        
        if (!recentlyViewed) {
          recentlyViewed = [];
        } else {
          recentlyViewed = recentlyViewed.split(',');
        }
        
        // Remove if already exists to avoid duplicates
        recentlyViewed = recentlyViewed.filter(item => item !== productId);
        
        // Add to beginning of array
        recentlyViewed.unshift(productId);
        
        // Keep only last 10 products
        recentlyViewed = recentlyViewed.slice(0, 10);
        
        // Set cookie (expires in 30 days)
        setCookie('recently_viewed', recentlyViewed.join(','), 30);
        
        // Helper functions for cookies
        function getCookie(name) {
          const value = `; ${document.cookie}`;
          const parts = value.split(`; ${name}=`);
          if (parts.length === 2) return parts.pop().split(';').shift();
        }
        
        function setCookie(name, value, days) {
          const date = new Date();
          date.setTime(date.getTime() + (days * 24 * 60 * 60 * 1000));
          document.cookie = `${name}=${value}; expires=${date.toUTCString()}; path=/`;
        }
      {%- endif -%}
    });
  </script>
{%- endif -%}

{% schema %}
{
  "name": "custom-recently-viewed",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Recently Viewed"
    },
    {
      "type": "range",
      "id": "desktop_slides",
      "min": 1,
      "max": 6,
      "step": 1,
      "label": "Desktop slides per view",
      "default": 4
    },
    {
      "type": "range",
      "id": "mobile_slides",
      "min": 1,
      "max": 3,
      "step": 1,
      "label": "Mobile slides per view",
      "default": 2
    },
    {
      "type": "checkbox",
      "id": "show_navigation",
      "label": "Show navigation arrows",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_pagination",
      "label": "Show pagination dots",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "custom-recently-viewed",
      "category": "Products"
    }
  ]
}
{% endschema %}