<style>
  .recently-viewed-section {
    margin: 40px 0;
    padding: 0 20px;
  }
  
  .recently-viewed-section .section-header {
    text-align: center;
    margin-bottom: 30px;
  }
  
  .recently-viewed-section h2 {
    font-size: 2rem;
    font-weight: bold;
    margin: 0;
  }
  
  .recently-viewed-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 20px;
    max-width: 1200px;
    margin: 0 auto;
  }
  
  .recently-viewed-product {
    border: 1px solid #e0e0e0;
    border-radius: 8px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  .recently-viewed-product:hover {
    transform: translateY(-5px);
    box-shadow: 0 5px 20px rgba(0,0,0,0.1);
  }
  
  .recently-viewed-product img {
    width: 100%;
    height: 250px;
    object-fit: cover;
    display: block;
  }
  
  .recently-viewed-product-info {
    padding: 15px;
  }
  
  .recently-viewed-product-title {
    font-size: 1.1rem;
    font-weight: 600;
    margin: 0 0 10px 0;
    line-height: 1.3;
  }
  
  .recently-viewed-product-title a {
    text-decoration: none;
    color: #333;
  }
  
  .recently-viewed-product-title a:hover {
    color: #007bff;
  }
  
  .recently-viewed-product-price {
    font-size: 1.1rem;
    font-weight: bold;
    color: #007bff;
  }
  
  .recently-viewed-empty {
    text-align: center;
    padding: 40px 20px;
    color: #666;
  }
  
  @media (max-width: 768px) {
    .recently-viewed-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 15px;
    }
    
    .recently-viewed-product img {
      height: 200px;
    }
    
    .recently-viewed-section h2 {
      font-size: 1.5rem;
    }
  }
</style>

{%- liquid
  assign recently_viewed_handles = request.cookies['recently_viewed'] | split: ','
  assign valid_products = ''
  assign product_count = 0
  
  for handle in recently_viewed_handles
    assign clean_handle = handle | strip
    if clean_handle != blank
      assign product = all_products[clean_handle]
      if product != blank and product.available
        if product_count > 0
          assign valid_products = valid_products | append: ','
        endif
        assign valid_products = valid_products | append: clean_handle
        assign product_count = product_count | plus: 1
        if product_count >= 8
          break
        endif
      endif
    endif
  endfor
-%}

<div class="recently-viewed-section" data-section-id="{{ section.id }}">
  <div class="section-header">
    <h2>{{ section.settings.heading | default: 'Recently Viewed Products' }}</h2>
  </div>
  
  {%- if valid_products != blank -%}
    <div class="recently-viewed-grid">
      {%- assign products_list = valid_products | split: ',' -%}
      {%- for handle in products_list -%}
        {%- assign product = all_products[handle] -%}
        {%- if product != blank -%}
          <div class="recently-viewed-product">
            <a href="{{ product.url }}">
              {%- if product.featured_image -%}
                <img src="{{ product.featured_image | image_url: width: 300 }}" 
                     alt="{{ product.featured_image.alt | escape }}"
                     loading="lazy">
              {%- else -%}
                <div style="width:100%;height:250px;background:#f5f5f5;display:flex;align-items:center;justify-content:center;color:#999;">
                  No Image
                </div>
              {%- endif -%}
            </a>
            <div class="recently-viewed-product-info">
              <h3 class="recently-viewed-product-title">
                <a href="{{ product.url }}">{{ product.title }}</a>
              </h3>
              <div class="recently-viewed-product-price">
                {%- if product.compare_at_price > product.price -%}
                  <span style="text-decoration: line-through; color: #999; margin-right: 10px;">
                    {{ product.compare_at_price | money }}
                  </span>
                {%- endif -%}
                {{ product.price | money }}
              </div>
            </div>
          </div>
        {%- endif -%}
      {%- endfor -%}
    </div>
  {%- else -%}
    <div class="recently-viewed-empty">
      <p>No recently viewed products found. Start browsing to see your recently viewed items here!</p>
    </div>
  {%- endif -%}
</div>

