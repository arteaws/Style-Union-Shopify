{% comment %}
Section: Custom Recent Products
File: sections/custom-recent-products.liquid
{% endcomment %}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css">
<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js" defer></script>

<div class="recent-products-section" id="recent-products-{{ section.id }}">
  <div class="container">
    {% if section.settings.show_heading %}
      <h2 class="recent-products-heading">{{ section.settings.heading }}</h2>
    {% endif %}
    
    <div class="recent-products-wrapper">
      <div class="swiper recent-products-swiper" data-section-id="{{ section.id }}">
        <div class="swiper-wrapper" id="recent-products-wrapper-{{ section.id }}">
          <!-- Products will be dynamically inserted here via JavaScript -->
        </div>
        
        {% if section.settings.show_navigation %}
          <div class="swiper-button-next"></div>
          <div class="swiper-button-prev"></div>
        {% endif %}
        
        {% if section.settings.show_pagination %}
          <div class="swiper-pagination"></div>
        {% endif %}
      </div>
      
      <div class="no-recent-products" id="no-recent-products-{{ section.id }}" style="display: none;">
        <p>{{ section.settings.empty_state_text }}</p>
      </div>
    </div>
  </div>
</div>

<style>
  .recent-products-section {
    padding: {{ section.settings.section_padding_top }}px 0 {{ section.settings.section_padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
  }
  
  .recent-products-heading {
    text-align: {{ section.settings.heading_alignment }};
    font-size: {{ section.settings.heading_size }}px;
    color: {{ section.settings.heading_color }};
    margin-bottom: 30px;
  }
  
  .recent-products-wrapper {
    position: relative;
  }
  
  .recent-products-swiper {
    overflow: hidden;
  }
  
  .recent-product-card {
    background: {{ section.settings.card_background }};
    border-radius: {{ section.settings.card_border_radius }}px;
    padding: 15px;
    text-align: center;
    transition: transform 0.3s ease;
    border: 1px solid {{ section.settings.card_border_color }};
  }
  
  .recent-product-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
  }
  
  .recent-product-image {
    width: 100%;
    height: {{ section.settings.image_height }}px;
    object-fit: cover;
    border-radius: {{ section.settings.image_border_radius }}px;
    margin-bottom: 10px;
  }
  
  .recent-product-title {
    font-size: {{ section.settings.product_title_size }}px;
    color: {{ section.settings.product_title_color }};
    text-decoration: none;
    display: block;
    line-height: 1.4;
  }
  
  .recent-product-title:hover {
    color: {{ section.settings.product_title_hover_color }};
  }
  
  .no-recent-products {
    text-align: center;
    padding: 40px 20px;
    color: {{ section.settings.empty_state_color }};
  }
  
  /* Custom Swiper Styles */
  .swiper-button-next,
  .swiper-button-prev {
    color: {{ section.settings.navigation_color }};
  }
  
  .swiper-pagination-bullet-active {
    background-color: {{ section.settings.pagination_active_color }};
  }
  
  .swiper-pagination-bullet {
    background-color: {{ section.settings.pagination_color }};
  }
</style>



<script>
document.addEventListener('DOMContentLoaded', function() {
  const sectionId = '{{ section.id }}';
  const swiperContainer = document.querySelector(`[data-section-id="${sectionId}"]`);
  const wrapper = document.getElementById(`recent-products-wrapper-${sectionId}`);
  const noProductsDiv = document.getElementById(`no-recent-products-${sectionId}`);
  
  // Configuration from section settings
  const config = {
    slidesPerView: {
      mobile: {{ section.settings.slides_per_view_mobile }},
      desktop: {{ section.settings.slides_per_view_desktop }}
    },
    spaceBetween: {{ section.settings.space_between }},
    showNavigation: {{ section.settings.show_navigation }},
    showPagination: {{ section.settings.show_pagination }},
    autoplay: {{ section.settings.enable_autoplay }},
    autoplayDelay: {{ section.settings.autoplay_delay }},
    loop: {{ section.settings.enable_loop }}
  };
  
  // Initialize recent products functionality
  initRecentProducts(sectionId, config);
  
  function initRecentProducts(sectionId, config) {
    const recentProducts = getRecentProducts();
    
    if (recentProducts.length === 0) {
      noProductsDiv.style.display = 'block';
      swiperContainer.style.display = 'none';
      return;
    }
    
    // Render products
    renderRecentProducts(recentProducts, wrapper);
    
    // Initialize Swiper
    initSwiper(sectionId, config);
  }
  
  function getRecentProducts() {
    try {
      const stored = localStorage.getItem('recentlyViewedProducts');
      return stored ? JSON.parse(stored) : [];
    } catch (e) {
      console.error('Error getting recent products:', e);
      return [];
    }
  }
  
  function renderRecentProducts(products, container) {
    container.innerHTML = '';
    
    products.forEach(product => {
      const slide = document.createElement('div');
      slide.className = 'swiper-slide';
      slide.innerHTML = `
        <div class="recent-product-card">
          <img src="${product.image}" alt="${product.title}" class="recent-product-image" loading="lazy">
          <a href="${product.url}" class="recent-product-title">${product.title}</a>
        </div>
      `;
      container.appendChild(slide);
    });
  }
  
  function initSwiper(sectionId, config) {
    const swiperConfig = {
      slidesPerView: config.slidesPerView.mobile,
      spaceBetween: config.spaceBetween,
      breakpoints: {
        768: {
          slidesPerView: config.slidesPerView.desktop,
        }
      }
    };
    
    if (config.showNavigation) {
      swiperConfig.navigation = {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
      };
    }
    
    if (config.showPagination) {
      swiperConfig.pagination = {
        el: '.swiper-pagination',
        clickable: true,
      };
    }
    
    if (config.autoplay) {
      swiperConfig.autoplay = {
        delay: config.autoplayDelay,
        disableOnInteraction: false,
      };
    }
    
    if (config.loop && getRecentProducts().length > config.slidesPerView.desktop) {
      swiperConfig.loop = true;
    }
    
    new Swiper(swiperContainer, swiperConfig);
  }
});
</script>

