<script>

document.addEventListener('DOMContentLoaded', function() {
  if (window.innerWidth <= 768) {
    const thumbnails = document.querySelectorAll('.product-single__thumbnails-item');
    const thumbnailContainer = document.querySelector('.thumb-slider-slides');
    
    thumbnails.forEach(thumb => {
      thumb.addEventListener('click', function(e) {
        // Store the current scroll position before the click
        const currentScrollLeft = thumbnailContainer.scrollLeft;
        
        // Allow the default click behavior to execute
        // (this will trigger the main image change)
        
        // Use setTimeout to restore scroll position after other handlers execute
        setTimeout(() => {
          thumbnailContainer.scrollLeft = currentScrollLeft;
        }, 10);
        
        // Optional: Add active state styling
        thumbnails.forEach(t => t.classList.remove('is-nav-selected'));
        thumb.classList.add('is-nav-selected');
      });
    });
    
    // Alternative approach: Override the carousel's scroll behavior
    const observer = new MutationObserver((mutations) => {
      mutations.forEach((mutation) => {
        if (mutation.type === 'attributes' && mutation.attributeName === 'style') {
          const target = mutation.target;
          if (target.classList.contains('thumb-slider-slides')) {
            // Prevent automatic transform/scroll changes
            const transform = target.style.transform;
            if (transform && transform.includes('translateX')) {
              target.style.transform = 'none';
            }
          }
        }
      });
    });
    
    if (thumbnailContainer) {
      observer.observe(thumbnailContainer, { 
        attributes: true, 
        attributeFilter: ['style'] 
      });
    }
  }
});
</script>