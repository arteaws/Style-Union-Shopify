<style>
    .tab-container {
      display: flex;
      justify-content: center;
      margin-bottom: 20px;
    }
    .tab {
      padding: 2px 20px;
      cursor: pointer;
      color: #999;
      line-height: 1;
    }
   .tab:nth-child(1){
     border-right:1px solid black;
   }
    .tab.active {
      color:#107be9;
    }
    .tab-content {
      display: none;
    }
    .tab-content.active {
      display: block;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      text-align: center;
    }
    th, td {
      border: 1px solid #ccc;
      padding: 8px;
    }
    thead {
      background-color: #f5f5f5;
    }
  .main-conatiner > div > img{
    width: fit-content;
    margin-right:auto;
    margin-left:auto;
  }
  .main-pop-up-content img{
    width: fit-content;
    margin-right:auto;
    margin-left:auto;
  }
  .cs-title-pop{
    font-size: 17px;
    font-weight: 900;
    margin-bottom: 0;
    color:#333333;
}
  .size-chart-txt{
    color:#333333;
    font-size:12px;
  }
  center.center-cs-tag {
    border-bottom: 1px solid black;
    margin-bottom: 1rem;
}
  </style>



<div class="main-pop-up-content">
<center class="center-cs-tag">
<p class="cs-title-pop">{{ product.title }}</p>
 <p class="size-chart-txt">Size Charts</p> 
</center>
{% if product.type == "Women's Leggings" or
      product.tags contains "Women Sleepwear Leggings" or 
      product.tags contains "Womens Ethnic Leggings" or 
      product.tags contains "Women ankle leggings" or 
      product.tags contains "Sports Leggings" or 
      product.tags contains "Womens Sports" %}  
<div class="leggings-page-content 1">
  {% assign leggings_page = pages['womens-leggings'] %}
  {{ leggings_page.content }}
</div>
{% endif %}
{% if  product.tags contains "Women Top with Pant & with Shrug Set"  %}  
<div class="women-top-with-pant-with-shrug-set-page-content 2">
  {% assign women-top-with-pant-with-shrug-set = pages['women-top-with-pant-with-shrug-set'] %}
  {{ women-top-with-pant-with-shrug-set.content }}
</div>
{% endif %}
{% if  product.tags contains "Mens Ethnic Shirts"  %}  
<div class="mens-ethnic-shirt-page-content 3">
  {% assign mens-ethnic-shirt = pages['mens-ethnic-shirt'] %}
  {{ mens-ethnic-shirt.content }}
</div>
{% endif %}
{% if  product.tags contains "Girls T-shirt and Shorts Sleepwear set"  %}  
<div class="Girls-T-shirt-and-Shorts-Sleepwear-set-page-content 4">
  {% assign Girls-T-shirt-and-Shorts-Sleepwear-set = pages['Girls-T-shirt-and-Shorts-Sleepwear-set'] %}
  {{ Girls-T-shirt-and-Shorts-Sleepwear-set.content }}
</div>
{% endif %}
{% if product.type == "Girl's Shorts" or  product.tags contains "Girls Shorts"  %}  
<div class="girls-shorts-1-y-to-12-y-page-content 5">
  {% assign girls-shorts-1-y-to-12-y = pages['girls-shorts-1-y-to-12-y'] %}
  {{ girls-shorts-1-y-to-12-y.content }}
</div>
{% endif %}

</div>










  
 <script>
  document.addEventListener('DOMContentLoaded', function() {
    // Get all tab elements
    const tabs = document.querySelectorAll('.tab');
    
    // Add click event listener to each tab
    tabs.forEach(tab => {
      tab.addEventListener('click', function() {
        // Get the tab ID from data attribute
        const tabId = this.getAttribute('data-tab');
        
        // Hide all tab contents
        document.querySelectorAll('.tab-content').forEach(el => {
          el.classList.remove('active');
        });
        
        // Remove active class from all tabs
        tabs.forEach(el => {
          el.classList.remove('active');
        });
        
        // Show the selected tab content and mark tab as active
        document.getElementById(tabId).classList.add('active');
        this.classList.add('active');
      });
    });
  });
</script>